extends ../layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")
block content
    form.product-form(action="/admin/product-add",method="post")
        .form-control
            label.title(for="title") Title
            input(type="text",name="title",placeholder="Enter name")#title
        .form-control
            label.title(for="imageUrl") Image URL
            input(type="text",name="imageUrl",placeholder="Enter image url")#imageUrl
        .form-control
            label.title(for="price") Price
            input(type="number",name="price",placeholder="Enter price",step="0.01")#price
        .form-control
            label.title(for="description") Description
            textarea(name="description",placeholder="Enter description",rows="5")#description

        button.btn(type="submit") Add Product

