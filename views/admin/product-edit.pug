extends ../layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")
block content
    form.product-form(action="/admin/product-"+verb,method="post")
        .form-control
            label.title(for="title") Title
            input(type="text",name="title",placeholder="Enter name", value=product.title?product.title:"")#title
            input(type="hidden",name="id",value=product.id?product.id:"")#id
        .form-control
            label.title(for="imageUrl") Image URL
            input(type="text",name="imageUrl",placeholder="Enter image url", value=product.imageUrl?product.imageUrl:"")#imageUrl
        .form-control
            label.title(for="price") Price
            input(type="number",name="price",placeholder="Enter price",step="0.01", value=product.price?product.price:"")#price
        .form-control
            label.title(for="description") Description
            textarea(name="description",placeholder="Enter description",rows="5")#description #{product.description?product.description:""}
        if verb == "edit"
            button.btn(type="submit") Update Product
        else
            button.btn(type="submit") Add Product

